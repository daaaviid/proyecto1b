function validacion(horizontal, vertical) {
  if ((fila>=1)&&(fila<=6)&&(columna>=1)&&(columna<=6) {
      return true
    }
  var fila=Number(prompt("Introduce tu fila"))
  var columna=Number(prompt("Introduce tu columna"))
}

if (fila>6) {
  alert("Fila no es valida")
}
if (fila<1){
  alert("Fila no es valida")
}
if (columna>6) {
  alert("Columna no es valida")
}
if (columna<1) {
  alert("Columna no es valida")
}
